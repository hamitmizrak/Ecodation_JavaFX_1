<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.hamitmizrak.vatcalculation.controller.ReceiptController">

    <!-- Üst Kısım: Başlık -->
    <top>
        <Label text="Fiş Yönetim Sistemi" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>
    </top>

    <!-- Orta Kısım: Tablo -->
    <center>
        <TableView fx:id="receiptTable">
            <columns>
                <TableColumn text="Fiş No" fx:id="receiptNumberColumn" />
                <TableColumn text="Tarih" fx:id="receiptDateColumn" />
                <TableColumn text="Vergi No" fx:id="taxNumberColumn" />
                <TableColumn text="Firma" fx:id="companyNameColumn" />
                <TableColumn text="Müşteri" fx:id="customerNameColumn" />
                <TableColumn text="Açıklama" fx:id="descriptionColumn" />
                <TableColumn text="Düzenleyen" fx:id="createdByColumn" />
                <TableColumn text="Hesap Kodu" fx:id="accountCodeColumn" />
                <TableColumn text="Fiş Türü" fx:id="receiptTypeColumn" />
                <TableColumn text="Tutar" fx:id="amountColumn" />
                <TableColumn text="KDV Oranı" fx:id="vatRateColumn" />
                <TableColumn text="Toplam Tutar" fx:id="totalAmountColumn" />
                <TableColumn text="Ödeme Türü" fx:id="paymentTypeColumn" />
            </columns>
        </TableView>
    </center>

    <!-- Alt Kısım: Butonlar -->
    <bottom>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20px;">

            <!-- İlk Buton Grubu (Ekle, Güncelle, Sil) -->
            <HBox alignment="CENTER" spacing="10">
                <Button text="Ekle" fx:id="addButton" onAction="#addReceipt"/>
                <Button text="Güncelle" fx:id="updateButton" onAction="#updateReceipt"/>
                <Button text="Sil" fx:id="deleteButton" onAction="#deleteReceipt"/>
                <Button text="Hesap Makinesi" onAction="#openCalculator"/>
            </HBox>

            <!-- Boşluk bırakmak için VBox spacing kullanıyoruz -->

            <!-- İkinci Buton Grubu (Excel, E-Posta, Yazdır, Hesap Makinesi) -->
            <HBox alignment="CENTER" spacing="10">
                <Button text="Excel'e Aktar" onAction="#createExcelFile"/>
                <Button text="E-Posta Gönder" onAction="#promptEmailAndSend"/>
                <Button text="Yazdır" onAction="#printExcelFile"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
